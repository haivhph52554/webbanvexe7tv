        }
        
        async function deleteBooking(id) {
            if (!confirm('B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a ƒë·∫∑t ch·ªó n√†y?')) return;
            
            try {
                const response = await fetch(`/admin/bookings/${id}`, {
